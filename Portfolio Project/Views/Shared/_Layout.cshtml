@{
    var controller = Context.Request.RouteValues["controller"]?.ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - Portfolio_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div id="container">
        <header>
            <nav class="navbar">
                <div class="navtext">
                    <div id="home" @(controller == "Home" ? "class=active" : "")>
                        <a asp-controller="Home" asp-action="Index">Home</a>
                    </div>
                    <div id="rightnavcontainer">
                        <div id="projects" @(controller.Equals("Projects") ? "class=active" : "")>
                            <a asp-controller="Projects" asp-action="Index">Projects</a>
                        </div>
                        <div id="contactme" @(controller.Equals("Contact") ? "class=active" : "")>
                            <a asp-controller="Contact" asp-action="Index">Contact me</a>
                        </div>
                    </div>
                </div>
            </nav>
        </header>       
        <main role="main" class="">
                @RenderBody()
        </main>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
    </div>
</body>
</html>
